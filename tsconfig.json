{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": true
  },
  "include": ["packages"],
  "exclude": ["node_modules", "packages/**/dist", "packages/**/node_modules"]
}
